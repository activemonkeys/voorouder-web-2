{
    "name": "voorouder-web-monorepo",
    "version": "0.0.1",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "packageManager": "pnpm@10.24.0",
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "build": "dotenv -f ./.env -- turbo build",
        "check": "pnpm format && pnpm typecheck && pnpm knip",
        "check-updates": "ncu --workspaces",
        "check-updates:interactive": "ncu --workspaces --interactive",
        "clean": "turbo clean",
        "dev": "dotenv -f ./.env -- turbo dev",
        "devs": "dotenv -f ./.env -- turbo devs",
        "format": "prettier --write \"**/*.{ts,tsx,md,json,js,mjs}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,md,json,js,mjs}\" || true",
        "knip": "dotenv -e .env -- knip --no-exit-code",
        "knip:production": "dotenv -e .env -- knip --production --no-exit-code",
        "knip:strict": "dotenv -e .env -- knip",
        "lint": "turbo lint",
        "lint:fix": "turbo lint -- --fix",
        "start": "dotenv -f ./.env -- turbo start --filter=web",
        "typecheck": "turbo typecheck",
        "typecheck:all": "turbo typecheck --continue",
        "update-deps": "ncu --workspaces --upgrade"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
        "@types/node": "^24.10.1",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@workspace/eslint-config": "workspace:*",
        "@workspace/typescript-config": "workspace:*",
        "cross-env": "^10.1.0",
        "dotenv-cli": "^11.0.0",
        "eslint": "^9.39.1",
        "knip": "^5.71.0",
        "prettier": "^3.7.3",
        "prettier-plugin-pkg": "^0.21.2",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "turbo": "^2.6.1",
        "typescript": "^5.9.3"
    },
    "pnpm": {
        "overrides": {
            "@types/react": "^19.2.7",
            "@types/react-dom": "^19.2.3",
            "react": "^19.0.0",
            "react-dom": "^19.0.0"
        },
        "ignoredBuiltDependencies": [
            "core-js-pure",
            "sharp"
        ]
    }
}
